<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:paddingHorizontal="@dimen/margin_std"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_ht_std"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_meeting_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_small"
            android:layout_marginVertical="@dimen/margin_std"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_regular"
            android:text=""
            android:layout_gravity="center_vertical"
            android:textStyle="normal" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_meeting_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_small"
            android:layout_marginVertical="@dimen/margin_std"
            android:textColor="@color/black"
            android:text=""
            android:textAlignment="gravity"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/textsize_regular"
            android:textStyle="normal" />


    </LinearLayout>




    <TextView
        android:id="@+id/tv_meeting_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_small"
        android:layout_marginVertical="@dimen/margin_std"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_regular"
        android:textStyle="normal" />

</LinearLayout>
